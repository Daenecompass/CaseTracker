package com.kritsit.casetracker.client.validation;

import junit.framework.Test;
import junit.framework.TestCase;
import junit.framework.TestSuite;

public class IntegerArrayValidatorTest extends TestCase {
    private IntegerArrayValidator validator;

    public IntegerArrayValidatorTest(String name) {
        super(name);
    }

    public static Test suite() {
        return new TestSuite(IntegerArrayValidatorTest.class);
    }

    public void setUp() {
        validator = new IntegerArrayValidator();
    }

    public void testContains() {
        int[] array = {1, 2, 3, 4, 5};

        assertTrue(validator.contains(1, array));
        assertFalse(validator.contains(6, array));
        assertFalse(validator.contains(null, array));
        assertFalse(validator.contains(1, null));
    }
}  
